<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".DemoActivity">

        <me.angrybyte.numberpicker.view.ActualNumberPicker
            android:id="@+id/actual_picker"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#FFFF3040"
            app:bar_color="@android:color/white"
            app:bar_width="1dp"
            app:bars_count="26"
            app:controls_color="@android:color/white"
            app:draw_over_controls="true"
            app:draw_over_text="false"
            app:fast_controls_color="@android:color/darker_gray"
            app:highlight_color="#FFFF3040"
            app:max_value="100"
            app:min_value="0"
            app:selection_color="#A0FF3040"
            app:show_bars="true"
            app:show_controls="true"
            app:show_fast_controls="true"
            app:show_highlight="true"
            app:show_text="false"
            app:text_color="@android:color/white"
            app:text_size="16sp"
            app:value="50" />

        <TextView
            android:id="@+id/info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actual_picker"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/this_picker_will_work" />

        <me.angrybyte.numberpicker.view.ActualNumberPicker
            android:id="@+id/actual_picker2"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_below="@id/info_message"
            android:layout_centerHorizontal="true"
            android:background="#FF30FF40"
            app:bar_color="@android:color/darker_gray"
            app:bar_width="1dp"
            app:bars_count="26"
            app:controls_color="#FFFFFF40"
            app:max_value="100"
            app:min_value="0"
            app:selection_color="#B0FF0000"
            app:show_highlight="false"
            app:show_text="true"
            app:text_color="@android:color/darker_gray"
            app:text_size="16sp" />

        <me.angrybyte.numberpicker.view.ActualNumberPicker
            android:id="@+id/actual_picker3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/actual_picker2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#FF7080FF"
            app:bar_color="@android:color/white"
            app:bar_width="2dp"
            app:bars_count="10"
            app:draw_over_controls="false"
            app:max_value="100"
            app:min_value="0"
            app:show_text="false"
            app:text_color="@android:color/white"
            app:text_size="16sp" />

        <me.angrybyte.numberpicker.view.ActualNumberPicker
            android:id="@+id/actual_picker4"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_below="@id/actual_picker3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#FFFF80FF"
            app:bar_color="@android:color/white"
            app:bar_width="2dp"
            app:bars_count="10"
            app:draw_over_text="true"
            app:highlight_color="#FFFFFFFF"
            app:max_value="100"
            app:min_value="0"
            app:show_highlight="true"
            app:show_text="true"
            app:text_color="@android:color/white"
            app:text_size="16sp" />

        <me.angrybyte.numberpicker.view.ActualNumberPicker
            android:id="@+id/actual_picker5"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_below="@id/actual_picker4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#FFFFFFFF"
            app:bar_color="@android:color/darker_gray"
            app:bar_width="12dp"
            app:bars_count="4"
            app:controls_color="#FF4050FF"
            app:draw_over_controls="true"
            app:fast_controls_color="#FF40FF60"
            app:highlight_color="#FF30AA30"
            app:max_value="100"
            app:min_value="0"
            app:show_text="false"
            app:text_color="@android:color/darker_gray"
            app:text_size="16sp" />

        <me.angrybyte.numberpicker.view.ActualNumberPicker
            android:id="@+id/actual_picker6"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_below="@id/actual_picker5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#FF00FFFF"
            app:bar_color="@android:color/darker_gray"
            app:bar_width="12dp"
            app:bars_count="4"
            app:max_value="100"
            app:min_value="0"
            app:show_controls="false"
            app:show_fast_controls="true"
            app:show_text="true"
            app:text_color="@android:color/darker_gray"
            app:text_size="16sp" />

        <me.angrybyte.numberpicker.view.ActualNumberPicker
            android:id="@+id/actual_picker7"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/actual_picker6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#FFFFFF30"
            app:bar_color="@android:color/black"
            app:bar_width="2dp"
            app:bars_count="10"
            app:max_value="100"
            app:min_value="0"
            app:show_controls="false"
            app:show_fast_controls="false"
            app:show_text="false"
            app:text_color="@android:color/white"
            app:text_size="16sp" />

        <me.angrybyte.numberpicker.view.ActualNumberPicker
            android:id="@+id/actual_picker8"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/actual_picker7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#FF000000"
            app:bar_color="@android:color/white"
            app:bar_width="2dp"
            app:bars_count="10"
            app:controls_color="#FFFF3030"
            app:max_value="100"
            app:min_value="0"
            app:selection_color="#EEFFFF00"
            app:show_controls="true"
            app:show_fast_controls="false"
            app:show_text="true"
            app:text_color="@android:color/white"
            app:text_size="16sp" />

    </RelativeLayout>

</ScrollView>